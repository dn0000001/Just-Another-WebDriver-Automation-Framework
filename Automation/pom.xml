	<build>
		<!-- specify source and encodings, lest compilation fail -->
		<!-- Controls Java Version in project -->
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.0.2</version>
				<configuration>
				<source>1.8</source>
				<target>1.8</target>
				<encoding>ISO-8859-1</encoding>
				</configuration>
			</plugin>
			
			<!-- gather dependent jars in one place, necessary for running our unit tests -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.1</version>
				<configuration>
				<outputDirectory>${project.build.directory}</outputDirectory>
				</configuration>
			</plugin>
			
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.19</version>
				<configuration>
				<parallel>classes</parallel>
				<threadCount>10</threadCount>
				</configuration>
			</plugin>
			
			<!-- integrating testng here -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-failsafe-plugin</artifactId>
				<version>2.16</version>
				<configuration>
				<forkCount>2C</forkCount>
				<reuseForks>false</reuseForks>
				<suiteXmlFiles>
				<suiteXmlFile>src/main/resources/test_suites/testng_Test.xml</suiteXmlFile>
				</suiteXmlFiles>
				<systemPropertyVariables>
				<!-- Basic Process Variables for Launcher -->
				<processes.testng.output>${processes.testng.output}</processes.testng.output>
				<env.log.folderFile>${processes.testng.output}</env.log.folderFile>
				<processes.config>${processes.config}</processes.config>
				<processes.max>${processes.max}</processes.max>
				<processes.start.delay>${processes.start.delay}</processes.start.delay>
				<processes.poll.interval>${processes.poll.interval}</processes.poll.interval>
				
				<!-- Variables for the test -->
				<env.config>src/main/resources/config/config.xml</env.config>
				<env.basePath>src/main/resources/data/</env.basePath>
				<env.log.prop>src/main/resources/config/logger.properties</env.log.prop>
				<env.translations>src/main/resources/config/translations.xml</env.translations>
				<grid.hub>${grid.hub}</grid.hub>
				<grid.browser.platform>${grid.browser.platform}</grid.browser.platform>
				<delay.element.timeout>${delay.element.timeout}</delay.element.timeout>
				<delay.max.timeout>${delay.max.timeout}</delay.max.timeout>
				<url>${url}</url>
				<browser.name>${browser.name}</browser.name>
				</systemPropertyVariables>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
	<pluginRepositories>
		<pluginRepository>
			<id>public</id>
			<name>Maven Central</name>
			<url>http://repo1.maven.org/maven2</url>
			<layout>default</layout>
			<releases>
				<updatePolicy>never</updatePolicy>
			</releases>
		</pluginRepository>
	</pluginRepositories>
	
	<repositories>
		<repository>
			<id>project.local</id>
			<name>project</name>
			<url>file:${project.basedir}/repo</url>
		</repository>
		<repository>
			<id>public</id>
			<name>Maven Central</name>
			<url>http://repo1.maven.org/maven2</url>
		</repository>
	</repositories>
</project>