		mvn deploy:deploy-file -Durl="file://C:/Project Folder/workspace/Automation/repo/" -Dfile=cobra.jar -DgroupId=org.lobobrowser -DartifactId=cobra -Dpackaging=jar -Dversion=0.98.4
